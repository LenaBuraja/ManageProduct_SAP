<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
>
	<ResponsivePopover
		title="{i18n>dimensionsTitle}"
		class="sapUiPopupWithPadding"
	>
		<content>
			<l:Grid>
				<l:content>
					<Text
						text="{i18n>productWidth}: {
							path: 'Width',
							formatter: '../model/formatter.numberUnit'
						} {DimUnit}"
					/>
					<Text
						text="{i18n>productDepth}: {
							path: 'Depth',
							formatter: '../model/formatter.numberUnit'
						} {DimUnit}"
					/>
					<Text
						text="{i18n>productHeight}: {
							path: 'Height',
							formatter: '../model/formatter.numberUnit'
						} {DimUnit}"
					/>
					<Text
						text="{i18n>productWeight}: {
							path: 'WeightMeasure',
							formatter: '../model/formatter.numberUnit'
						} {WeightUnit}"
					/>
				</l:content>
			</l:Grid>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>
